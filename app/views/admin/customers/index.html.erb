<div class="container">
  <div class="row">
    <!--<div class="col-10">-->
<h2>ユーザーリスト</h2>
<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <% if customer.is_deleted == false %>
      <td>会員（利用中）</td>
      <% else %>
      <td>退会（利用停止中）</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
