<h2><%= @user.name %>さまの情報編集</h2>
<%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
    <table>
      <tr>
        <td><%= f.label :ユーザー名 %></td>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :会員ステータス %></td>
        <td><%= f.radio_button :is_deleted, false %> <%= f.label :is_deleted, "会員", value: true %>
            <%= f.radio_button :is_deleted, true %> <%= f.label :is_deleted, "退会", value: false %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "変更内容を保存", class: 'btn btn-md' %></td>
      </tr>
    </table>
<% end %>