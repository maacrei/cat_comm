<div class="container">
  <div class="row">
    <h2>ユーザーリスト</h2>
    <table>
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to admin_user_path(user) do %><%= user.name %><% end %></td>
          <td><%= user.email %></td>
          <% if user.is_deleted == false %>
          <td>会員（利用中）</td>
          <% else %>
          <td>退会（利用停止中）</td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
</div>
</div>