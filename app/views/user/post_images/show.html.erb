<div class="container">
  <h2><%= @post_image.title %></h2>
  <div class="row">
  <div class="col-8">
  <%= image_tag @post_image.get_image(800,800), class: "img-fluid" %>
  </div>
  <div class="col-4">
    <h5>説明<br><%= @post_image.caption %></h5>
    <h6>投稿者: <%= @post_image.user.name %></h6>
    <h6>投稿日: <%= @post_image.created_at.strftime('%Y/%m/%d') %></h6>
    <!--いいね機能-->
    <%= render 'user/favorites/favorite-btn', post_image: @post_image %>
    <!--ログインしているのが投稿ユーザーもしくは管理者の場合、削除ボタン表示-->
    <% if @post_image.user == current_user || admin_signed_in? %>
      <%= link_to "削除", destroy_post_image_path(@post_image), method: :delete, data: {confirm: "本当に削除しますか？"} %>
    <% end %>
    <!--投稿ユーザーが退会していたら表示-->
    <% if @post_image.user.is_deleted == true %>
      <h6>退会済みのユーザーです。</h6>
    <% end %>
  </div>
  </div>
</div>