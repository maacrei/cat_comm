<div class="container">
<h2>投稿一覧</h2>
<div class="row">
  <!--<div class="col-3">-->
<div class="d-flex flex-wrap" style="align-items: baseline;">
  <% @post_images.each do |post_image| %>
  <div>
    <%= link_to post_image_path(post_image.id) do %>
    <!--get_imageはmodelsに定義-->
      <%= image_tag post_image.get_image(300,300), class: "cat-photo" %>
    <% end %>
    <p>タイトル:<%= post_image.title %></p>
    <!--いいね機能-->
    <%= render 'user/favorites/favorite-btn', post_image: post_image %>
  </div>
  <% end %>
</div>
<!--</div>-->
</div>
</div>