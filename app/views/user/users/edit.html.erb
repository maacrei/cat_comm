<div class="container">
  <h2>ユーザー情報編集</h2>
    <!--<div class="row">-->
    <!--  <div class="col-6">-->
        <%= form_with model: @user, url: myupdate_path, local: true do |f| %>
        <table>
          <tr>
            <td class="pt-3"><%= f.label :ユーザー名 %></td>
            <td class="pt-3"><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="pt-3"><%= f.label :メールアドレス %></td>
            <td class="pt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="pt-4"><%= f.submit "変更内容を保存", class: 'btn btn-md' %></td>
          </tr>
        </table>
        <% end %>
      <!--</div>-->
      <!--<div class="col-6">-->
        <br><%= link_to "退会する", unsubscribe_path, class: 'btn btn-md' %>
