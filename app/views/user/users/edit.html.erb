<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>ユーザー情報編集</h2>
        <%= form_with model: @user, url: myupdate_path, local: true do |f| %>
        <table>
          <tr>
            <td><%= f.label :ユーザー名 %></td>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.submit "変更内容を保存", class: 'btn btn-md' %></td>
          </tr>
        </table>
        <% end %>
    </div>
    <div class="col-6">
      <%= link_to "退会する", unsubscribe_path, class: 'btn btn-md' %>
    </div>
  </div>
</div>