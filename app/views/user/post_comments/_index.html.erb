  <p>コメント件数：<%= post_image.post_comments.count %></p>
  <table>
    <!--.reverseでコメントを新着順に表示してる-->
  <% post_image.post_comments.reverse.each do |post_comment| %>
    <tr>
      <td>
        <%= post_comment.user.name %> <%= post_comment.created_at.strftime('%Y/%m/%d/%H:%M') %>
        <% if post_comment.user == current_user || admin_signed_in? %>
          <%= link_to "コメント削除", post_image_destroy_post_comments_path(post_comment.post_image, post_comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%= post_comment.comment %></td>
    </tr>
  <% end %>
  </table>